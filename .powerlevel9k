# Custom settings for powerlevel9k

# Prompts
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status rbenv nodeenv nvm virtualenv)

# Truncated dir
POWERLEVEL9K_SHORTEN_DIR_LENGTH=1
POWERLEVEL9K_SHORTEN_DELIMITER=""
POWERLEVEL9K_SHORTEN_STRATEGY="truncate_from_right"

# Fonts
#POWERLEVEL9K_MODE='awesome-patched'
POWERLEVEL9K_MODE='awesome-fontconfig'

# Options
POWERLEVEL9K_STATUS_VERBOSE="false"

# Colors
# dir 
POWERLEVEL9K_DIR_HOME_FOREGROUND='236'
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND='236'
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND='236'
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND='001'

# Advanced `vcs` color customization
POWERLEVEL9K_VCS_CLEAN_FOREGROUND='236'
POWERLEVEL9K_VCS_CLEAN_BACKGROUND='064'
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND='236'
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND='136'
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND='236'
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND='136'

# virtualenv
POWERLEVEL9K_VIRTUALENV_FOREGROUND='003'
POWERLEVEL9K_VIRTUALENV_BACKGROUND='020'

# nodeenv, nvm 
POWERLEVEL9K_NODEENV_FOREGROUND='040'
POWERLEVEL9K_NODEENV_BACKGROUND='234'
POWERLEVEL9K_NVM_FOREGROUND='040'
POWERLEVEL9K_NVM_BACKGROUND='234'

# rbenv
POWERLEVEL9K_RBENV_FOREGROUND='007'
POWERLEVEL9K_RBENV_BACKGROUND='001'


